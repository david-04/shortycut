{
    "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
    "files": {
        "ignoreUnknown": true
    },
    "vcs": {
        "enabled": false
    },
    "linter": {
        "enabled": false
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "off"
            }
        }
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        },
        "formatter": {
            "quoteStyle": "double",
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "trailingCommas": "es5",
            "semicolons": "always",
            "arrowParentheses": "asNeeded",
            "bracketSameLine": false,
            "bracketSpacing": true
        }
    },
    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": false
        }
    }
}
